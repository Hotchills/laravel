.nav {  
  cursor: default;
  z-index: 500;
  margin: 0 auto;  
  padding: 0;  position:fixed; top:0px; width:100%;
  left:0px;
  background:grey; /* linear-gradient(to bottom,grey,#e5ebeb 90%);  */
  height:5%; 
  min-height:40px;
  opacity: 0.8; 
  border:0px;padding-left:19%;
  
}
 .nav:focus, .nav:hover{ opacity: 1.0;} 
.nav > li {
	 display:inline;
  float:left;
  width:10%;
  min-width:90px;
  height:100%;
 /*  border-left: 1px solid white; */
  border-right: 1px solid white;
  box-shadow: 1px 0px 0px 0px rgba(255,255,255,0.3);  
}

/* menu links */
.nav > li > a {
  color: black;
  display: block;
  text-shadow: 0 0 1px rgba(0, 0, 0, 0.35);
  transition: all .3s ease;
  z-index: 510;
  padding:10%;
  text-align:center;
  position: relative;
top: 50%;
left: 50%;
transform: translate(-50%, -50%);
}
.nav > li :focus,.nav > li:hover  {
   background: white; opacity: 1.0; 
  /* font-weight: bold; */
}
.nav > li:first-child {

 background: grey ;
 border-left: 1px solid white;
}

