/* menu dropdown */
.mega-menu {
  background: black;
  border: 1px solid #ddd;
  border-radius: 0 0 3px 3px; 
  position: absolute;
  transition: all .01s ease .05s;
  visibility: hidden;
  width:100%;
  left:0%;  
  top:100%;
  opacity: 0.80;padding-left:19%;
  padding-right:19%;
}
li:hover > .mega-menu {
  overflow: visible;
  visibility: visible;
}

/* menu content */
.nav-column {
  float: left;
  padding: 0.5%;
  width: 10%;
  
}
.nav-column a {
  color: white;
  display: block;
  line-height: 1.75;
    opacity: 1.0;
  font-size: 16px;
	}
.nav-column h3 {
  color: white;
  font-size: 18px;
  font-weight: bold;
  line-height: 1.15;
  margin: 1.25em 0 .75em;
  text-transform: uppercase;
    opacity: 1.0;
}
.nav-column a:hover {
  color: #2196f3;
}

